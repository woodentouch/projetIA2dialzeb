"""
Configuration locale pour le développement
Copier ce fichier en tant que .env
"""

# === BASE DE DONNÉES ===
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sports
# Pour Docker Compose:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/sports

# === REDIS ===
REDIS_URL=redis://localhost:6379
# Pour Docker Compose:
# REDIS_URL=redis://redis:6379

# === CONFIGURATION FASTAPI ===
API_TITLE="Football Betting Platform"
API_VERSION="1.0.0"
DEBUG=true

# === CONFIGURATION DATABASE ===
DB_STARTUP_RETRIES=12
DB_STARTUP_DELAY=1.0
DB_STARTUP_BACKOFF=1.6

# === CONFIGURATION CORS ===
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://127.0.0.1:5173"]

# === CONFIGURATION PARIS ===
MIN_BET_AMOUNT=1.0
MAX_BET_AMOUNT=10000.0
DEFAULT_USER_ID=1

# === CONFIGURATION FRONTEND ===
VITE_API_BASE_URL=http://localhost:8000
VITE_DEV_PORT=5173
